<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opiskelija-sovellus" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="studentStackPanel" VerticalAlignment="Top" Margin="10">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
        <Button x:Name="btnSaveToFile" Content="Tallenna tiedostoon" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="150" Click="btnSaveToFile_Click"/>
        <Button x:Name="btnLoadFromFile" Content="Lataa tiedostosta" HorizontalAlignment="Left" Margin="170,370,0,0" VerticalAlignment="Top" Width="150" Click="btnLoadFromFile_Click"/>
    </Grid>
</Window>
