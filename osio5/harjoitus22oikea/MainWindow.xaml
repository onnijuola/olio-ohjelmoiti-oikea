<Window x:Class="IkkunaSovellus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IkkunaSovellus" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ikkunan Leveys (L):"/>
        <TextBox x:Name="leveysTextBox" Grid.Row="0" Width="100" Margin="5"/>
        <TextBlock Text="Ikkunan Korkeus (H):" Grid.Row="1"/>
        <TextBox x:Name="korkeusTextBox" Grid.Row="1" Width="100" Margin="5"/>
        <TextBlock Text="Karmipuun Leveys (W):" Grid.Row="2"/>
        <TextBox x:Name="karmiTextBox" Grid.Row="2" Width="100" Margin="5"/>
        <Button Content="Laske" Click="LaskeButton_Click" Grid.Row="3" Margin="5"/>
        <TextBlock x:Name="piiriTextBlock" Grid.Row="4" Margin="0,82,0,-82"/>
        <TextBlock x:Name="lasiTextBlock" Grid.Row="4" Margin="0,50,0,-50"/>
        <TextBlock x:Name="pintaalaTextBlock" Grid.Row="4" Margin="0,21,0,-21"/>
        <Rectangle x:Name="ikkunaRectangle" Grid.Row="7" Stroke="Black" Fill="Transparent"/>
    </Grid>
</Window>
